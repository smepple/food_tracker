= provide :title, "Sign in"

%h1 Sign in
%hr

= form_tag sessions_path, data: { validate: "parsley" } do
  %fieldset
    %ul
      %li
        = label_tag :username
        = text_field_tag :username, nil, 
                         data: { required: true,
                                 rangelength: [MIN_USER_USERNAME_LENGTH, 
                                               MAX_USER_USERNAME_LENGTH],
                                 type: "alphanum",
                                 trigger: "keyup",
                                 "validation-minlength" => 2,
                                 "error-message" => "Please enter a valid username between 2 and 16 characters long" }
      %li
        = label_tag :password
        = password_field_tag :password, nil, 
                             data: { required: true,
                                     rangelength: [MIN_USER_PASSWORD_LENGTH, 
                                                   MAX_USER_PASSWORD_LENGTH],
                                     trigger: "change",
                                     "validation-minlength" => 1,
                                     "error-message" => "Please enter a valid password between 6 and 32 characters long" }
      %li
        = submit_tag "Sign in", class: "btn"