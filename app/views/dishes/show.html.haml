- if @dish.photo_url.present?
  - cache "dish_photo_#{@dish.id}" do
    .photo
      = filepicker_image_tag @dish.photo_url, quality: 30, 
                                              crop: "0,400,4000,600"
%h1= @dish.name
.category
  %cite= @category.name
.prep-time
  %cite= "#{@dish.prep_time} minutes"
.source
  %cite= "From #{@source.name}"
.eat_date
  %cite Eaten
  %cite.timeago{title: @dish.eat_date}

%hr

%blockquote= @dish.description